{
  "name": "@koperasi-sinoman/ui",
  "version": "1.0.0",
  "private": true,
  "description": "Shared UI component library for Koperasi Sinoman applications",
  "keywords": ["ui", "components", "react", "tailwind", "design-system", "koperasi", "sinoman"],
  "author": "Koperasi Sinoman",
  "license": "UNLICENSED",
  "homepage": "https://github.com/koperasi-sinoman/ui#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/koperasi-sinoman/monorepo.git",
    "directory": "packages/ui"
  },
  "bugs": {
    "url": "https://github.com/koperasi-sinoman/monorepo/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": {
      "import": "./dist/styles.css",
      "require": "./dist/styles.css"
    },
    "./tailwind": {
      "types": "./dist/tailwind.config.d.ts",
      "import": "./dist/tailwind.config.mjs",
      "require": "./dist/tailwind.config.js"
    }
  },
  "files": [
    "dist/**",
    "src/**",
    "tailwind.config.js",
    "postcss.config.js",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run build:js && pnpm run build:css",
    "build:js": "tsup src/index.ts --format cjs,esm --dts --sourcemap",
    "build:css": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles.css --minify",
    "build:tailwind": "tsup tailwind.config.ts --format cjs,esm --dts --out-dir dist",
    "dev": "concurrently \"pnpm run dev:js\" \"pnpm run dev:css\"",
    "dev:js": "tsup src/index.ts --format cjs,esm --dts --watch --sourcemap",
    "dev:css": "tailwindcss -i ./src/styles/globals.css -o ./dist/styles.css --watch",
    "clean": "rimraf dist",
    "lint": "eslint src/ --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src/ --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --exit-zero-on-changes",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.4.0",
    "lucide-react": "^0.427.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.0",
    "@radix-ui/react-select": "^2.1.0",
    "@radix-ui/react-toast": "^1.2.0",
    "@radix-ui/react-tooltip": "^1.1.0",
    "@radix-ui/react-popover": "^1.1.0",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-alert-dialog": "^1.1.0",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-checkbox": "^1.1.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-radio-group": "^1.2.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-separator": "^1.1.0",
    "react-hook-form": "^7.52.0",
    "@hookform/resolvers": "^3.9.0",
    "zod": "^3.23.0",
    "date-fns": "^3.6.0",
    "framer-motion": "^11.3.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/node": "^20.14.0",
    "typescript": "^5.5.0",
    "tsup": "^8.2.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "prettier": "^3.3.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "vitest": "^2.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/ui": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/user-event": "^14.5.0",
    "jsdom": "^24.1.0",
    "storybook": "^8.2.0",
    "@storybook/addon-essentials": "^8.2.0",
    "@storybook/addon-docs": "^8.2.0",
    "@storybook/addon-controls": "^8.2.0",
    "@storybook/addon-viewport": "^8.2.0",
    "@storybook/addon-actions": "^8.2.0",
    "@storybook/react": "^8.2.0",
    "@storybook/react-vite": "^8.2.0",
    "chromatic": "^11.7.0",
    "concurrently": "^8.2.0",
    "rimraf": "^5.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "next": "^14.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}