{
  "name": "@koperasi-sinoman/auth",
  "version": "1.0.0",
  "description": "Authentication utilities and middleware for Koperasi Sinoman",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts",
      "import": "./dist/middleware.mjs",
      "require": "./dist/middleware.js"
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/middleware.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/middleware.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "jose": "^5.0.0",
    "bcryptjs": "^2.4.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "eslint": "^8.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}